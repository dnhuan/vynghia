{
  "manifest_version": 2,
  "name": "Login Facebook with access_token",
  "description": "Đăng nhập Facebook với access_token",
  "author": "Vy Nghia",
  "version": "1.0",

  "icons": {
    "48": "icon.png"
  },

  "permissions": [
    "tabs",
    "cookies",
    "http://*/*",
    "https://*/*",
    "notifications",
    "storage",
    "contextMenus",
    "webRequest",
    "webRequestBlocking"
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval' https://maxcdn.bootstrapcdn.com https://ajax.googleapis.com https://cdnjs.cloudflare.com; object-src 'self'",

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  }
}